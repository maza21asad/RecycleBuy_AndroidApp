<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/user_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/default_user_icon"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounder_panel_white_bg"

        android:orientation="horizontal">

        <com.zmonster.recyclebuy.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:textColor="@color/black_black_middle"
            android:textSize="16sp"
            app:type_face_font="museosans_700" />

        <com.zmonster.recyclebuy.view.FontEditText
            android:id="@+id/edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/rounder_panel_grey_bg"
            android:hint="@string/user_name"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black_black_small"
            android:textSize="15sp"
            app:type_face_font_edit="museosans_500" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounder_panel_white_bg"
        android:orientation="horizontal">

        <com.zmonster.recyclebuy.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/black_black_middle"
            android:textSize="16sp"
            app:type_face_font="museosans_700" />

        <com.zmonster.recyclebuy.view.FontEditText
            android:id="@+id/edit_user_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/rounder_panel_grey_bg"
            android:hint="@string/description"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black_black_small"
            android:textSize="15sp"
            app:type_face_font_edit="museosans_500" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounder_panel_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.zmonster.recyclebuy.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sex"
            android:textColor="@color/black_black_middle"
            android:textSize="16sp"
            app:type_face_font="museosans_700" />

        <RadioGroup
            android:id="@+id/rgp_sex_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtn_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/man" />

            <RadioButton
                android:id="@+id/rbtn_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/woman" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounder_panel_white_bg"
        android:orientation="horizontal">

        <com.zmonster.recyclebuy.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textColor="@color/black_black_middle"
            android:textSize="16sp"
            app:type_face_font="museosans_700" />

        <com.zmonster.recyclebuy.view.FontEditText
            android:id="@+id/edit_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/rounder_panel_grey_bg"
            android:hint="@string/phone"
            android:inputType="phone"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black_black_small"
            android:textSize="15sp"
            app:type_face_font_edit="museosans_500" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounder_panel_white_bg"
        android:orientation="horizontal">

        <com.zmonster.recyclebuy.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_title"
            android:textColor="@color/black_black_middle"
            android:textSize="16sp"
            app:type_face_font="museosans_700" />

        <com.zmonster.recyclebuy.view.FontEditText
            android:id="@+id/edit_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/rounder_panel_grey_bg"
            android:hint="@string/address_title"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black_black_small"
            android:textSize="15sp"
            app:type_face_font_edit="museosans_500" />
    </LinearLayout>

    <com.zmonster.recyclebuy.view.FontTextView
        android:id="@+id/update_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="40dp"
        android:background="@drawable/rounder_panel_bg"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="@string/update_tile"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:type_face_font="museosans_700" />

</LinearLayout>